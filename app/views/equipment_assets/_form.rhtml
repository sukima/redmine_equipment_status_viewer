<% form_for(@equipment_asset) do |f| %>
  <%= f.error_messages %>
  <div class="pluginESV_formfield">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="pluginESV_formfield">
    <%= f.label :asset_type %><br />
    <%= f.text_field :asset_type %>
  </div>
  <div class="pluginESV_formfield">
    <%= f.label :serial_number %><br />
    <%= f.text_field :serial_number %>
  </div>
  <% @equipment_asset.custom_field_values.each do |value| %>
    <div class="pluginESV_formfield">
      <%= custom_field_tag_with_label :equipment_asset, value %>
    </div>
  <% end %>
  <div class="pluginESV_formfield">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :size => "30x5" %>
  </div>
  <div>
    <%= f.label :resource_url %><br />
    <%= f.text_field :resource_url %>
    <p>(optional URL that links to further resources such as a manual or notes)</p>
  </div>
  <div class="pluginESV_formfield">
    <%= f.label :oos, 'Out of service' %><br />
    <%= f.check_box :oos %>
  </div>
  <div class="pluginESV_formactions">
    <%= f.submit "Submit" %>
    <%= link_to "Cancel", equipment_assets_path %>
  </div>
<% end %>
